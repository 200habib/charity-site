                <img src="{{ asset('image/home/white-mode/arrow.png') }}" alt="Flèche pour plus d'informations" class="home_services_icon home_services_arraw" height="35">
            </a>
        </li>
        <li class="home_services_item">
            <a href="{{ path('app_product_index') }}" class="home_services_items_color">
                <img src="{{ asset('image/home/white-mode/dons.svg') }}" alt="Icône Achat de produits" class="home_services_icon" height="80">
                <p class="home_services_description">Venez acheter</p>
                <img src="{{ asset('image/home/white-mode/arrow.png') }}" alt="Flèche pour plus d'informations" class="home_services_icon home_services_arraw" height="35">
