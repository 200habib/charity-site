{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

<div class="category-index__conteiner">


    <h1 class="category-index__header">Category index</h1>

    <table class="category-index__table">
        <thead>
            <tr class="category-index__table-row">
                <th class="category-index__table-header">Id</th>
                <th class="category-index__table-header">Name</th>
                <th class="category-index__table-header">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="category-index__table-row">
                <td class="category-index__table-data">{{ category.id }}</td>
                <td class="category-index__table-data">{{ category.name }}</td>
                <td class="category-index__table-actions">
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="category-index__link">show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="category-index__link">edit</a>
                </td>
            </tr>
        {% else %}
            <tr class="category-index__table-row">
                <td colspan="3" class="category-index__no-records">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<button class="category-index__create-new general__button">
    <a href="{{ path('app_category_new') }}">Create new</a>
</button>

</div>
{% endblock %}
