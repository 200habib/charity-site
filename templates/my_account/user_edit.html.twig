{% extends 'base.html.twig' %}

{% block title %}Mon Profile
{% endblock %}

{% block body %}


	<header class="UserEdit__header">
		<h1 class="UserEdit__title">Changer l'email ou le mot de passe</h1>
		<p class="general__border-body">
			<span class="general__border"></span>
		</p>
	</header>

	<div class="UserEdit">
		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.email) }}
			{{ form_widget(form.email, {'attr': {'class': 'general__input'}}) }}
			{{ form_errors(form.email, {'attr': {'class': 'general__input'}}) }}
		</div>

		<div class="form-group">
			{{ form_row(form.plainPassword.first, {'attr': {'class': 'general__input'}}) }}
			{{ form_row(form.plainPassword.second, {'attr': {'class': 'general__input'}}) }}
		</div>


		<button type="submit" class="general__button">Mettre Ã 
		</button>
		{{ form_end(form) }}
	</div>


{% endblock %}
